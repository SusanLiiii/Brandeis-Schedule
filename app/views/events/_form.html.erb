<%= form_with(model: event) do |form| %>
  
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :room %>
    <%= form.select :room, options_for_select(get_room_list, room_id), :class => 'form-control' %>
    <%= room_id%>
  </div>

  <div class="field">
    <%= form.label :date %>
    <% if event_date.nil?%>
        <%= form.date_field :date%>
    <% else %>
        <%= form.date_field :date, value: event_date %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :start_time %>
    <% if start_time.nil?%>
        <%= form.time_field :start_time%>
    <% else %>
        <%= form.time_field :start_time, value: start_time.to_datetime.strftime("%H:%M")%>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :end_time %>
    <% if end_time.nil?%>
        <%= form.time_field :end_time%>
    <% else %>
        <%= form.time_field :end_time, value: end_time.to_datetime.strftime("%H:%M")%>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
