<html>
  <div class="container mt-4">
      <div class="row d-flex justify-content-center">
  <%= form_tag(do_search_rooms_path, method: "get", class: "form") do %>
  <div class="row">
              <div class="card p-3 py-2">
                  <%# <h5>Filters</h5> %>
                  <div class="row g-1 mt-1">
    <div class="row tbalign-items-centerp-2">
      <div class="col-sm-8">
      <div class="row g-1 mt-1">
        <div class="col">
          <%= select_tag(:location, options_for_select(get_location_list), class: "form-control-lg") %>
        </div>
      </div>
      </div>

      <div class="d-flex justify-content-center px-2 col-md-4">
          <%= text_field_tag(:name, "", class: "form-control-lg", placeholder: "search for") %>
          <%= button_tag( :class => "button_green") do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
              <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
            </svg>
          <% end %>
        </div>
    </div>
    </div>
    </div>
  <% end %>
  </div>
  </div>
  <% if logged_in? %>
    <% if is_organizer? %>
      <div class="mt-3">
        <%= button_to "Find a room", search_available_rooms_path, method: :get, class:"btn float-right login_btn" %>
      </div>
    <% end %>
  <% end %>
  <%= render "index" %>

  <style>
         
    .login_btn{
        color: white;
        background-color: #003478;
        }

        .login_btn:hover{
        color: black;
        background-color: white;
        }
     
        #attendence{
            color:#003478;
            font-weight:700;
            margin-left: auto; 
        margin-right: 0;
        }
  </style>
</html>