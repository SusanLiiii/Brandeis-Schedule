    <!-- Creates a loop of @posts.count / 3 arrays -->
    <% @rooms.in_groups_of(3).each do |room_array| %>
    <div class="row">
        <!-- For each post in the array, give it a class of "col-4" which is 3 per row-->
        <% room_array.each do |room| %>
        <!-- If posts.count = 4, last array will be [post4, nil, nil] so if it's nil, don't do anything or you'll get an error-->
        <%  unless room.nil? %>
        <div class="col-4">
            <div class="card p-3 mb-2">
                <div class="d-flex justify-content-between">
                    <div class="d-flex flex-row align-items-center">
                        <div class="icon"> <i class="bx bxl-mailchimp"></i> </div>
                        <%# <div class="ms-2 c-details">
                            <h6 class="mb-0">Mailchimp</h6> <span>1 days ago</span>
                        </div> %>
                        <div class="ms-2 c-details">
                            <h6 class="mb-0"><%= room.location %></h6>
                        </div>
                    </div>
                    <%# <div class="badge"> <span>Design</span> </div> %>
                </div>
                <div class="mt-5">
                    <h3 class="heading">
                        <% name = room.name.html_safe.to_s%>
                        <%= link_to name, room, class:"link" %>
                    </h3>
                    <p class="text-muted">
                    <% if logged_in? && is_organizer?%>
                        <% if params[:event_date].nil? %>
                            <div class="mt-3">
                                <%= button_to "Reserve the room", new_event_path(room_id: room.id), method: :get, class:"btn float-right login_btn" %>
                            </div>
                        <% else %>
                            <div class="mt-3">
                                <%= button_to "Reserve the room", new_event_path(event_date: get_date_time(params[:event_date], params[:time])[0], start_time: get_date_time(params[:event_date], params[:time])[1], end_time: get_date_time(params[:event_date], params[:time])[2], room_id: room.id),method: :get, class:"btn float-right login_btn" %>
                            </div>
                        <% end %>
                    <% end %>
                    </p>
                </div>
            </div>
            <br>
        </div>
        <!-- Ends the "unless post.nil" block -->
        <% end %>
        <!-- Ends the "post_array.each" block -->
        <% end %>
    </div>
    <!-- Ends the "@posts.in_groups_of" block -->
    <% end %>
