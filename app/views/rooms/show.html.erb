<html>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @room.name.html_safe %>
</p>

<p>
  <strong>Location:</strong>
  <%= @room.location %>
</p>

<p>
  <strong>Capacity:</strong>
  <%= @room.capacity %>
</p>

<p>
  <strong>Events:</strong>
  <h1>Today's Events</h1>
  <% Calendar.new(@room.event_schedules).get_today.each do |event| %>
    <%= link_to event.name, event %>
    <% if logged_in?%>
      <% if is_organizer? %>
      <% else %>
        <% if current_user.events.where(id:event.id).empty? %>
          <%= button_to "Add to My Schedule", add_participants_path, method: :post, params: { event_id: event.id }%>
        <% else %>
          <div> Attending</div>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  <h1>Future Events</h1>
  <% Calendar.new(@room.event_schedules).get_future.each do |event| %>
    <%= link_to event.name, event %>
    <% if logged_in?%>
      <% if is_organizer? %>
      <% else %>
        <% if current_user.events.where(id:event.id).empty? %>
          <%= button_to "Add to My Schedule", add_participants_path, method: :post, params: { event_id: event.id }%>
        <% else %>
          <div class="mt-3"> Attending</div>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</p>

<%= link_to 'Back', search_rooms_path %>

<style>
      body {
          background-color: #eee
      }
      
      .link{
          color: black;
          text-decoration:none; 
      }
      .link:hover{
          background-color:transparent;
          color:#003478;
      }

      .login_btn{
        color: white;
        background-color: #003478;
        }

        .login_btn:hover{
        color: black;
        background-color: white;
        }
     

    </style>
  </html>