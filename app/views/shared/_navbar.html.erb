<html>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-uWxY/CJNBR+1zjPWmfnSnVxwRheevXITnMqoEIeG1LJrdI0GlVs/9cVSyPYXdcSF" crossorigin="anonymous">
  <nav class="navbar navbar-expand-lg navbar-dark py-3" style="background-color:003478;" >
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Home</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" href="/events">Event</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/rooms">Room</a>
          </li>
          <% if logged_in? %>
            <li class="nav-item"><%= link_to "My Schedule", current_user%> </li>
            <li class="nav-item dropdown">
              <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown"> Account <b class="caret"></b>
              </a>
              <ul class="nav-item dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", '#' %></li>
                <li class="divider"></li>
                <li>
                  <% if is_organizer? %>
                    <%= link_to "Log out", logout_organizers_path, method: :delete %>
                  <% else %>
                    <%= link_to "Log out", logout_participants_path, method: :delete %>
                  <% end %>
                </li>
              </ul>
            </li>
          <% else %>
            <li class="nav-item dropdown">
              <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Participant<b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Log in", login_participants_path %></li>
                <li><%= link_to "Sign up", signup_participants_path %></li>
              </ul>
            </li>
            <li class="nav-item dropdown">
              <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown"> Organizer <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Log in", login_organizers_path %></li>
                <li><%= link_to "Sign up", signup_organizers_path %></li>
              </ul>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <style>
    .navbar-brand{
      font-family: 'Lato', sans-serif;
      color:white;
      font-size: 30px;
    }
    .nav-item{
      font-size: 20px;
      color:white;
    }
  </style>
</html>