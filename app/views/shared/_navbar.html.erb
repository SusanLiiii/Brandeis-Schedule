<html>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">  
  <nav class="navbar navbar-expand-lg sticky-top navbar-dark" style="background-color:#003478;">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <img src="https://i.pinimg.com/564x/6e/cc/04/6ecc04468e38206850744f15aa8b531d.jpg" alt="" width="200" height="50">
      </a>
      
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active nav-link-grow-up" href="/events/search">Event</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active nav-link-grow-up" href="/rooms/search">Room</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active nav-link-grow-up" href="/organizers">Organizers</a>
          </li>
          <% if logged_in? %>
            <li class="nav-item dropdown" id="account">
              <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" ><%= current_user.name%>
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <%= link_to "My Schedule", current_user, class:"dropdown-item"%>
                <li><hr class="dropdown-divider"></li>
                <% if is_organizer? %>
                    <%= link_to "Log out", logout_path, class:"dropdown-item" %>
                  <% else %>
                    <%= link_to "Log out", logout_path, class:"dropdown-item" %>
                  <% end %>
              </ul>
            </li>
          <% else %>
            <li class="nav-item dropdown" id="account">
              <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Participant
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <%= link_to "Log in", login_participants_path, class:"dropdown-item" %>
                <%= link_to "Sign up", signup_participants_path, class:"dropdown-item" %>
              </ul>
            </li>
            <li class="nav-item dropdown" id="account">
              <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false"> Organizer 
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <%= link_to "Log in", login_organizers_path, class:"dropdown-item" %>
                <%= link_to "Sign up", signup_organizers_path,class:"dropdown-item" %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <style>

    .navbar-brand{
      font-family: "Whitney SSm A", "Whitney SSm B", sans-serif;
      color:rgb(255, 255, 255);
      font-size: 30px;

    }
    .nav-item{
      font-size: 20px;
      color:white;
      font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
      font-weight:600px;

    }

    .nav-link{
      padding: 20px 0px;
      margin: 0px 5px;
      display: inline-block;
      position: relative;
      opacity: 0.9;
      font-weight: bold;
    }

    .dropdown:hover>.dropdown-menu {
      display: block;
    }

    .navbar {
      position: sticky;
      top: 0; /* it does not reposition right away,
                but determines at which point it sticks */
      box-shadow: 0 0 20px 0 black;
    }

    #account{
      position:right;
    }

    .nav-link:hover {
      opacity: 1;
    }

    .nav-link::before {
      transition: 300ms;
      height: 5px;
      content: "";
      position: absolute;
      background-color: white;
    }
    

    .nav-link-grow-up::before {
  height: 0%;
  width: 85%;
  bottom: 0px;
}

.nav-link-grow-up:hover::before {
  height: 4px;
}

body {
  padding: 0;
  margin: 0;
  
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  background-color: #DDD;
}

  #schedule{
    float: right;
  }
    
  </style>
</html>
